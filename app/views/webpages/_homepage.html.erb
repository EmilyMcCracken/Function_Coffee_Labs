<!DOCTYPE html>
<html>
	<head>
		<title><%= @webpage.name %></title>
	</head>
		<body class="homepage_body">
			<header class="home_header" style="background-image:url(<%= @webpage.header_image.head_img.url %>)">
				<nav class="home_nav">
					<ul class="navbar">
						<% @webpages.each do |web| %>
						<li class="home_li"><%= link_to "#{web.name}", "/webpages/#{web.id}" %></li>
						<% end %>
						<li class="other_li"><%= link_to "FCL Blog", posts_path %></li>
					</ul>
				</nav>
				<%= image_tag("Function.png", class: "home_logo") %>
			</header>

			<div class="webpage_header">
				<%= @webpage.headers.first.text %>
			</div>
			
			<div class="webpage_content">
				<div class="webpage_subheader"><%= @webpage.bodies.first.subheader %></div>
				<div class="webpage_paragraph"><%= simple_format @webpage.bodies.first.paragraph %></div>
			</div>

			<div class="webpage_images">
				<% @webpage.images.each do |image| %>
					<div class="image"><%= image_tag image.img.url(:medium) %></div> <br><br>
				<% end %>
			</div>
		</body>
</html>